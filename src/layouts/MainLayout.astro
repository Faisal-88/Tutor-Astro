---
//component import
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
// style import
import "../styles/global.css"

const {
	title = "My Astro Blog",
	description = "This My description",
} = Astro.props; //title cara 2 menggunakan props
---

<html lang="en">
    <MainHead {title} {description} /> <!-- memanggil semacam route title yang di buat dari props di MainHead.astro -->
	<body>
		<Nav />
		<slot>Default Text</slot>
		<Footer />
	</body>
</html>